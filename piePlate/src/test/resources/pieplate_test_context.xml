<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />

    <bean id="beanService" class="org.pieTools.pieUtilities.beanService.BeanService" lazy-init="true">
    </bean>

    <bean id="clusterService" class="org.pieTools.piePlate.service.cluster.jgroupcluster.JGroupsClusterService" lazy-init="true">
        <property name="channelFactory" ref="channelFactory"/>
        <property name="receiver" ref="objectReceiver"/>
        <property name="clusterMessageHandler" ref="clusterMessageHandler"/>
    </bean>

    <bean id="clusterMessageHandler" class="org.pieTools.piePlate.service.cluster.jgroupcluster.JGroupsClusterMessageHandler" lazy-init="true">
    </bean>

    <bean id="simpleReceiver" class="org.pieTools.piePlate.service.cluster.jgroupcluster.SimpleReceiver" scope="prototype" lazy-init="true">
        <property name="clusterMessageHandler" ref="clusterMessageHandler"/>
    </bean>

    <bean id="objectReceiver" class="org.pieTools.piePlate.service.cluster.jgroupcluster.ObjectBasedReceiver" scope="prototype" lazy-init="true">
        <property name="clusterMessageHandler" ref="clusterMessageHandler"/>
    </bean>

    <bean id="messageTask" class="org.pieTools.piePlate.service.cluster.MessageTask" scope="prototype" lazy-init="true"/>

    <bean id="channelFactory" class="org.pieTools.piePlate.service.cluster.jgroupcluster.ChannelFactory" lazy-init="true"></bean>
</beans>
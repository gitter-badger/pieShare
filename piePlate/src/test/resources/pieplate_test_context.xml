<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />

    <bean id="beanService" class="org.pieTools.pieUtilities.beanService.BeanService" lazy-init="true">
    </bean>

    <bean id="clusterService" class="org.pieTools.piePlate.service.cluster.jgroupsCluster.JGroupsClusterService" lazy-init="true">
        <property name="channelFactory" ref="channelFactory"/>
        <property name="receiver" ref="objectReceiver"/>
        <property name="clusterMessageHandler" ref="clusterMessageHandler"/>
        <property name="serializerService" ref="serializerService"/>
    </bean>

    <bean id="serializerService" class="org.pieTools.piePlate.service.serializer.DefaultSerializerService" lazy-init="true">
    </bean>

    <bean id="clusterMessageHandler" class="org.pieTools.piePlate.service.cluster.ClusterMessageHandler" lazy-init="true">
    </bean>

    <bean id="objectReceiver" class="org.pieTools.piePlate.service.cluster.jgroupsCluster.ObjectBasedReceiver" scope="prototype" lazy-init="true">
        <property name="clusterMessageHandler" ref="clusterMessageHandler"/>
        <property name="serializerService" ref="serializerService"/>
    </bean>

    <bean id="channelFactory" class="org.pieTools.piePlate.service.cluster.jgroupsCluster.ChannelFactory" lazy-init="true"></bean>
</beans>
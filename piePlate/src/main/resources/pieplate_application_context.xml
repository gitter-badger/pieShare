<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />

    <bean id="beanService" class="org.pieShare.pieTools.pieUtilities.beanService.BeanService" lazy-init="true">
    </bean>
    
    <bean id="clusterService" class="org.pieShare.pieTools.piePlate.service.cluster.jgroupsCluster.JGroupsClusterService" scope="prototype" lazy-init="true">
        <property name="beanService" ref="beanService"/>
        <property name="channelFactory" ref="channelFactory"/>
        <property name="receiver" ref="simpleReceiver"/>
    </bean>

    <bean id="channelFactory" class="org.pieShare.pieTools.piePlate.service.cluster.jgroupsCluster.ChannelFactory" lazy-init="true"></bean>
</beans>